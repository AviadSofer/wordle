{
    "env": {
        "es2021": true
    },
    "settings": {
        "import/resolver": {
          "node": {
            "extensions": [".ts"]
          }
        }
    },
    "extends": [
        "airbnb-base",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "linebreak-style": 0,
        "no-underscore-dangle":  ["error", { "allow": ["_id"] }],
        "import/extensions": [
            "error",
            "ignorePackages",
            {
              "ts": "never"
            }
         ]
    }
}
